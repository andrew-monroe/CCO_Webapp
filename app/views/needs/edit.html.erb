<%= form_for :need, url: needs_path do |f| %>
  <h1>Editing Need</h1>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :agency %><br>
    <%= f.text_field :agency %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </p>

  <p>
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </p>

  <p>
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </p>

  <p>
    <%= f.label :volunteers_needed %><br>
    <%= f.number_field :volunteers_needed %>
  </p>

  <p>
    <%= f.label :volunteers_signed_up %><br>
    <%= f.number_field :volunteers_signed_up %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
